<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <sectionGroup name="spring">
      <section name="context" type="Spring.Context.Support.ContextHandler, Spring.Core"/>
      <section name="objects" type="Spring.Context.Support.DefaultSectionHandler, Spring.Core"/>
    </sectionGroup>
    <sectionGroup name="common">
      <section name="logging" type="Common.Logging.ConfigurationSectionHandler, Common.Logging" />
    </sectionGroup>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
     
  </configSections>
  <appSettings file="Config\appSettings.config"/>
  <connectionStrings configSource="Config\database.config"/>
   
  <common>
    <logging>
      <factoryAdapter type="Common.Logging.Log4Net.Log4NetLoggerFactoryAdapter,Common.Logging.Log4Net">
        <arg key="configType" value="FILE-WATCH" />
        <arg key="configFile" value="~/config/log4net.config" />
      </factoryAdapter>
    </logging>
  </common>
  <spring>
    <context>
      <resource uri="file://~/Config/spring/aop.config"/>
      <resource uri="file://~/Config/spring/nhibernate.config"/>
      <resource uri="file://~/Config/spring/plugin.dao.config"/>
      <resource uri="file://~/Config/spring/plugin.service.config"/>
      <resource uri="file://~/Config/spring/dao.config"/>
      <resource uri="file://~/Config/spring/service.config"/>
    </context>
  </spring>
  <system.serviceModel>
    <services configSource="Config\wcf\services.config" />
    <bindings configSource="Config\wcf\Bindings.config"></bindings>
    <behaviors configSource="Config\wcf\Behaviors.config"></behaviors>
    <extensions configSource="Config\wcf\extensions.config"></extensions>
  </system.serviceModel>
  <system.web>
    <customErrors mode="RemoteOnly"/>
    <compilation debug="true" targetFramework="4.0" />
    <authentication mode="Windows"/>
  </system.web>
</configuration>
